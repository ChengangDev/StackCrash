{
    "name": "浏览记录",
    "version": "1.0.1",
    "manifest_version": 2,
    "description": "记录解决问题的一些网址",
    "icons": {
        "48": "img/avatar.png"
    },
    "browser_action": {
      "default_icon": "img/avatar.png",
      "default_popup": "popup.html"
    },
    "background":{
      "page": "background.html",
      "script":["js/background.js"]
    },
    "options_ui":{
      "page":"options.html",
      "chrome_style":false
    },
    "permissions": [
      "tabs",
      "storage",
      "history",
      "webNavigation",
      "*://*/*"
    ]
}
